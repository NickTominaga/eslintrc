{
    "root": true,
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules":
    {
      "brace-style": ["error", "allman"],
      "indent": ["error", 4],
      "no-trailing-spaces": "error",
      "@typescript-eslint/no-namespace": "off"
    }
}
